<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.capken.catdogtube.MainActivity">

    <fragment
        class="com.capken.catdogtube.function.player.PlayerFragment"
        android:id="@+id/player_fragment"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

    <!-- Container -->
    <fragment
        class="com.capken.catdogtube.function.video.presentation.segmented.SegmentedFragment"
        android:id="@+id/container_segmented"
        android:layout_width="370dp"
        android:layout_height="match_parent" />

</LinearLayout>
