<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.capken.catdogtube.MainActivity">

    <fragment
        class="com.capken.catdogtube.function.player.PlayerFragment"
        android:id="@+id/player_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Container -->
    <fragment
        class="com.capken.catdogtube.function.video.presentation.segmented.SegmentedFragment"
        android:id="@+id/container_segmented"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="#00FF00"
        android:layout_below="@+id/player_fragment" />

</RelativeLayout>
